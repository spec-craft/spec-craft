{
  "name": "@speccraft/cli",
  "version": "0.1.0",
  "description": "Spec Creator - 帮团队创建和管理 spec-driven 工作流的工具",
  "type": "module",
  "main": "src/index.ts",
  "bin": {
    "craft": "./bin/craft.ts"
  },
  "scripts": {
    "dev": "bun --watch bin/craft.ts",
    "start": "bun bin/craft.ts",
    "test": "bun test",
    "test:coverage": "bun test --coverage",
    "typecheck": "tsc --noEmit",
    "build": "bun build ./src/index.ts --outdir ./dist",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.15",
    "yaml": "^2.3.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "typescript": "^5.3.0",
    "prettier": "^3.2.4"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "spec",
    "workflow",
    "cli",
    "agent"
  ],
  "author": "",
  "license": "MIT"
}
